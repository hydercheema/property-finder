<div class="container">
    <p id="notice"><%= notice %></p>
    <h1 class="text-center pt-5">Properties</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Rooms</th>
                <th>Bathroom</th>
                <th>Price</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @properties.each do |property| %>
            <tr>
                <td><%= property.name %></td>
                <td><%= property.address %></td>
                <td><%= property.rooms %></td>
                <td><%= property.bathroom %></td>
                <td><%= property.price %></td>
                <td><%= link_to 'Show', property , class: "btn btn-success btn-sm", style: "color: white" %></td>
                <td><%= link_to 'Edit', edit_property_path(property) , class: "btn btn-secondary btn-sm", style: "color: white" %></td>
                <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger btn-sm", style: "color: white" %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <div class="col text-center">
        <%= link_to 'New Property', new_property_path , class: "btn btn-success btn-lg", style: "color: white" %>
    </div>
</div>